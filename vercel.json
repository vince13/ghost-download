{
  "builds": [
    {
      "src": "landing/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "app/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1.js"
    },
    {
      "src": "/app/payment-(success|cancel)",
      "dest": "/app/index.html"
    },
    {
      "src": "/payment-(success|cancel)",
      "dest": "/app/index.html"
    },
    {
      "src": "/app",
      "dest": "/app/index.html"
    },
    {
      "src": "/app/(.*)",
      "dest": "/app/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/landing/$1",
      "continue": true
    }
  ]
}

