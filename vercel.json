{
  "builds": [
    {
      "src": "landing/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "app/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "functions": {
    "app/api/**/*.js": {
      "runtime": "nodejs20.x"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/app/api/$1"
    },
    {
      "src": "/app",
      "dest": "/app/index.html"
    },
    {
      "src": "/app/(?!api)(.*)",
      "dest": "/app/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/landing/$1"
    }
  ]
}

